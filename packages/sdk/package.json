{
  "name": "pohi-sdk",
  "version": "0.1.0",
  "description": "SDK for interacting with PoHI Registry on World Chain",
  "author": "Ikko Eltociear Ashimine",
  "keywords": [
    "pohi",
    "sdk",
    "world-chain",
    "attestation",
    "blockchain"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "lint": "eslint src --no-error-on-unmatched-pattern || true"
  },
  "dependencies": {
    "pohi-core": "^0.1.0",
    "pohi-evm": "^0.1.0",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pohi-protocol/pohi.git",
    "directory": "packages/sdk"
  },
  "license": "Apache-2.0"
}
