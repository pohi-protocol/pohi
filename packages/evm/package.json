{
  "name": "pohi-evm",
  "version": "0.1.0",
  "description": "EVM/blockchain utilities for PoHI attestations - Keccak-256 hashing and conversion",
  "author": "Ikko Eltociear Ashimine",
  "keywords": [
    "pohi",
    "evm",
    "ethereum",
    "world-chain",
    "keccak256"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "pohi-core": "^0.1.0",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pohi-protocol/pohi.git",
    "directory": "packages/evm"
  },
  "license": "Apache-2.0"
}
