{
  "name": "pohi-core",
  "version": "0.1.0",
  "description": "Core library for Proof of Human Intent - Chain-neutral types and validation",
  "author": "Ikko Eltociear Ashimine",
  "keywords": [
    "pohi",
    "proof-of-human",
    "world-id",
    "attestation",
    "human-verification"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "lint": "eslint src"
  },
  "dependencies": {},
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pohi-protocol/pohi.git",
    "directory": "packages/core"
  },
  "license": "Apache-2.0"
}
